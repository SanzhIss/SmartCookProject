{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "watchPatterns": [
            "/app/*.py",
            "/app/**/*.py",
            "/SmartCookBackend/*.py",
            "/custom_auth/*.py",
            "/publish_recipe/*.py",
            "requirements.txt",
            "/Dockerfile",
            "/docker-compose.yml"
        ]
    },
    "deploy": {
        "restartPolicyType": "ON_FAILURE"
    }
}